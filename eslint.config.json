{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "resolveJsonModule": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "declaration": false,
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
